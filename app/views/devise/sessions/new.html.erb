<div class="d-flex">
  <div class="left">
    <div class="container-left">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label: false,
                      placeholder: "Email" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "user_signin_password" },
                      label: false,
                      placeholder: "Senha" %>
          <div class="form-actions d-flex align-items-center mb-3">
            <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
            <%= f.input :remember_me, as: :boolean, label: "Lembre-se de mim" if devise_mapping.rememberable? %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
    <%# image_tag "dog_and_cats.png", class: "dog-and-cat" %>
  </div>
  <div class="right d-flex justify-content-center align-items-center">
    <%= image_tag "only_logo.png" %>
  </div>
</div>